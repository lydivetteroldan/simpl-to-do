<form class="form update-content" data-id={{todo.id}}>
  <div class="form-group">
    <input type="hidden" name="todo[done]">
    <input type="text" class="form-control input-sm" name="todo[content]" placeholder="{{todo.content}}">
  </div>
  <div class="form-group text-right">
    <button class="btn btn-default btn-sm btn-custom" type="submit">Update</button>
  </div>
</form>
