<ul class="row list-unstyled to-do-list" id="todoList">
  {{#each todos as |todo|}}
  <li class="to-do see-more" data-toggle="modal" data-target="#todoModal">
    <div class="col-xs-12">
      <form class="item-form">
        <div class="form-group">
          <div class="checkbox" data-id={{todo.id}}>
            <label name="{{todo.content}}">
              <input type="checkbox" name="{{todo.done}}" aria-label="checkbox"> {{todo.content}}
            </label>
          </div>
        </div>
      </form>
    </div>
  </li>
  {{/each}}
</ul>
